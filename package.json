{
  "name": "archive-cross-platform-app",
  "version": "1.0.0",
  "type": "module",
  "main": "src/App.tsx",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "vitest run",
    "migrate": "node --loader ts-node/esm ./src/db/migrate.ts",
    "seed": "node --loader ts-node/esm ./src/db/seed.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "prebuild:web": "expo install @expo/metro-runtime react-dom react-native-web @expo/webpack-config",
    "build:web": "expo export:web",
    "serve:web": "npx serve -s dist -l 4173"
  },
  "dependencies": {
    "@expo/metro-runtime": "~3.1.3",
    "@expo/webpack-config": "^19.0.1",
    "better-sqlite3": "^9.4.1",
    "expo": "^50.0.0",
    "expo-sqlite": "^16.0.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "^0.73.0",
    "react-native-web": "~0.19.6",
    "sql.js": "^1.13.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/better-sqlite3": "^7.6.7",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.37",
    "@types/react-native": "^0.73.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@types/sql.js": "^1.4.9",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/ui": "^0.34.6",
    "detox": "^20.10.0",
    "eslint": "^8.56.0",
    "globals": "^16.4.0",
    "playwright": "^1.41.2",
    "fake-indexeddb": "^6.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.7.0",
    "vitest": "^0.34.6"
  }
}
