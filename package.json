{
  "name": "archive-cross-platform-app",
  "version": "1.0.0",
  "type": "module",
  "main": "src/App.tsx",
  "engines": {
    "node": "^20.0.0 || ^22.0.0"
  },
  "packageManager": "npm@10",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "vitest run",
    "pretest": "npm run verify:install",
    "verify:install": "npm ci --ignore-scripts=false",
    "migrate": "node --loader ts-node/esm ./src/db/migrate.ts",
    "seed": "node --loader ts-node/esm ./src/db/seed.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "build:web": "expo export --platform web --output-dir dist",
    "prebuild": "expo prebuild",
    "serve:web": "npx serve -s dist -l 4173",
    "versions:check": "node scripts/check-versions.js",
    "audit:ci": "npm audit --omit=dev --audit-level=high",
    "prepare": "npx simple-git-hooks"
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.1",
    "better-sqlite3": "^12.2.0",
    "expo": "^54.0.2",
    "expo-sqlite": "^16.0.8",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-native": "^0.81.4",
    "react-native-web": "~0.21.1",
    "sql.js": "^1.13.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.11.30",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "detox": "^20.41.1",
    "eslint": "^9.35.0",
    "fake-indexeddb": "^6.2.2",
    "globals": "^16.4.0",
    "playwright": "^1.55.0",
    "simple-git-hooks": "^2.13.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-push": "npm run versions:check"
  }
}
